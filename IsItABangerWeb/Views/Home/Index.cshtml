@model IsItABangerWeb.Models.Song

@{
    Layout = "~/Views/Shared/_LayoutFullPage.cshtml";
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Result", "Songs", FormMethod.Post))
{
    
@Html.AntiForgeryToken()
    
<div id="fullpage">
    <div class="section">
        <div class="jumbotron">
            <p class="lead">A series of rigorous tests to answer one simple question...</p>
            <h1>Is It A Banger?</h1>
            <p>
                <a class="btn btn-primary btn-lg margin-right banger-scroll-down">Start the test</a>
                @Html.ActionLink("See the list", "Index", "Songs", null, new { @class = "btn btn-primary btn-lg" })
            </p>
        </div>
    </div>

    <div class="section">
        <div class="jumbotron">
            <h2>How many beats per minute?</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.EditorFor(model => model.Bpm, new { htmlAttributes = new { id="field_bpm", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bpm, "", new { @class = "text-danger" })
            </div>

            <p>
                <a class="btn btn-primary btn-lg margin-right banger-scroll-down" data-banger-valfield="field_bpm">Next</a>
                <a class="btn btn-primary btn-lg banger-scroll-up">Back</a>
            </p>

        </div>
    </div>

    <div class="section">
        <div class="jumbotron">
            <h2>How many drops?</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.EditorFor(model => model.Drops, new { htmlAttributes = new { id = "field_drops", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Drops, "", new { @class = "text-danger" })
            </div>

            <p>
                <a class="btn btn-primary btn-lg margin-right banger-scroll-down" data-banger-valfield="field_drops">Next</a>
                <a class="btn btn-primary btn-lg banger-scroll-up">Back</a>
            </p>
        </div>
    </div>

    <div class="section">
        <div class="jumbotron">
            <h2>Are the drops dope?</h2>
            <div class="form-group">
                @Html.EditorFor(model => model.DropsAreDope, new { htmlAttributes = new { id = "field_dope", @class = "form-control" } })
            </div>

            <p>
                <a class="btn btn-primary btn-lg margin-right banger-scroll-down">Next</a>
                <a class="btn btn-primary btn-lg banger-scroll-up">Back</a>
            </p>

        </div>
    </div>

    <div class="section">
        <div class="jumbotron">
            <h2>Are there any acoustic instruments?</h2>
            <div class="form-group">
                @Html.EditorFor(model => model.HasAcousticInstruments, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <p>
                <input type="submit" value="Find out if it's a banger..." class="btn btn-primary btn-lg margin-right" />
                <a class="btn btn-primary btn-lg banger-scroll-up">Back</a>
            </p>

        </div>
    </div>
</div>
}