@model IsItABangerWeb.Models.Song

@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Create", "Songs", FormMethod.Post))
{
    
@Html.AntiForgeryToken()
    
<div id="fullpage">
    <div class="section">
        <div class="jumbotron">
            <p class="lead">A series of rigorous test to answer one simple question...</p>
            <h1>Is It A Banger?</h1>
            <p>
                <div class="row">
                    <div class="col-md-6"><a class="btn btn-primary btn-lg banger-scroll-down">Start the test</a></div>
                    <div class="col-md-6"><a class="btn btn-primary btn-lg">See the bangers</a></div>
                </div>
            </p>
        </div>
    </div>

    <div class="section">
        <div class="jumbotron">
            <h2>How many beats per minute?</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.EditorFor(model => model.Bpm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bpm, "", new { @class = "text-danger" })
            </div>

            <p>
                <div class="row">
                    <div class="col-md-6"><a class="btn btn-primary btn-lg banger-scroll-down">Next</a></div>
                    <div class="col-md-6"><a class="btn btn-primary btn-lg banger-scroll-up">Back</a></div>
                </div>
            </p>

        </div>
    </div>

    <div class="section">
        <div class="jumbotron">
            <h2>How many drops?</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.EditorFor(model => model.Drops, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Drops, "", new { @class = "text-danger" })
            </div>

            <p>
                <div class="row">
                    <div class="col-md-6"><a class="btn btn-primary btn-lg banger-scroll-down">Next</a></div>
                    <div class="col-md-6"><a class="btn btn-primary btn-lg banger-scroll-up">Back</a></div>
                </div>
            </p>

        </div>
    </div>

    <div class="section">
        <div class="jumbotron">
            <h2>Are the drops dope?</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.EditorFor(model => model.DropsAreDope, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DropsAreDope, "", new { @class = "text-danger" })
            </div>

            <p>
                <div class="row">
                    <div class="col-md-6"><a class="btn btn-primary btn-lg banger-scroll-down">Next</a></div>
                    <div class="col-md-6"><a class="btn btn-primary btn-lg banger-scroll-up">Back</a></div>
                </div>
            </p>

        </div>
    </div>

    <div class="section">
        <div class="jumbotron">
            <h2>Are there any acoustic instruments?</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.EditorFor(model => model.HasAcousticInstruments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HasAcousticInstruments, "", new { @class = "text-danger" })
            </div>

            <p>
                <div class="row">
                    <div class="col-md-6"><input type="submit" value="Find out if it's a banger..." class="btn btn-primary btn-lg" /> </div>
                    <div class="col-md-6"><a class="btn btn-primary btn-lg banger-scroll-up">Back</a></div>
                </div>
            </p>

        </div>
    </div>
</div>
}